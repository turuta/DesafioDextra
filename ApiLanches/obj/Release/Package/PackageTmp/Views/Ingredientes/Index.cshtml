@model IEnumerable<ApiLanches.Models.Ingrediente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de ingredientes</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Ingrediente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr id="@item.IdIngrediente">
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td class="valorItem">
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdIngrediente })
        </td>
        <td>
            @Html.ActionLink("Excluir", "Delete", new { id = item.IdIngrediente })
        </td>
    </tr>
}

</table>
